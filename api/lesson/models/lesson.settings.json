{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "name": "lesson",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "lessonNo": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "description": {
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "key": {
      "type": "uid",
      "required": true
    },
    "levelNo": {
      "type": "integer"
    },
    "pages": {
      "type": "dynamiczone",
      "components": [
        "page-content.image-with-audio",
        "page-content.video-text",
        "page-content.super-simple-page"
      ]
    },
    "level": {
      "via": "lessons",
      "model": "level"
    },
    "usersCurrentLesson": {
      "via": "currentLesson",
      "plugin": "users-permissions",
      "collection": "user"
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "Yellow",
        "Red",
        "Green",
        "Blue"
      ],
      "required": true
    }
  }
}
